<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bk" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height_1"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="35dip"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_new"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/body_padding_medium"
        android:layout_marginRight="@dimen/body_padding_medium"
        android:contentDescription="@string/arrow"
        android:src="@drawable/imageview_arrow" />
    
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height_1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_new"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>