<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.example.simplepoker.common.CommonTitleView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textToBeChanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_small"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_normal" />

    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:hint="test input"
        android:inputType="text"
        android:maxLength="20"
        android:padding="@dimen/margin_medium"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changeTextBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/please_select"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/activityChangeTextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="页面跳转"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_line"
        android:fadingEdge="none"
        android:scrollbars="none" />

</LinearLayout>